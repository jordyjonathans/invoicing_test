{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2016",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@infrastructure/*": ["infrastructure/*"],
      "@domain/*": ["domain/*"],
      "@interfaces/*": ["interfaces/*"],
      "@application/*": ["application/*"]
    }
  },
  "include": ["src"]
}
